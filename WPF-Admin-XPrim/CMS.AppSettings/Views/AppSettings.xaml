<Page
    x:Class="CMS.AppSettings.Views.AppSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:auth="clr-namespace:WPF.Admin.Themes.Converter;assembly=WPF.Admin.Themes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CMS.AppSettings.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:CMS.AppSettings.ViewModels"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    Title="AppSettings"
    d:DataContext="{d:DesignInstance Type=viewmodels:AppSettingsViewModel}"
    IsEnabled="{Binding Source={x:Static auth:LoginAuthHelper.LoginUser}, Path=LoginAuth, Converter={StaticResource AdminEnabled}}"
    Visibility="{Binding Source={x:Static auth:LoginAuthHelper.LoginUser}, Path=LoginAuth, Converter={StaticResource AdminVisibility}}"
    mc:Ignorable="d">
    <hc:DialogContainer>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <ItemsControl
                Grid.Column="0"
                ItemsSource="{Binding ContentModels}"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="2" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Border
                                Height="50"
                                Margin="5"
                                BorderBrush="{DynamicResource Border.Brush}"
                                BorderThickness="2"
                                CornerRadius="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Text="{Binding Key}" />
                                    <TextBox
                                        Grid.Column="1"
                                        Margin="2"
                                        Text="{Binding Value}" />
                                </Grid>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Grid Grid.Column="1">
                <StackPanel
                    Margin="20"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">
                    <Button
                        Width="180"
                        Height="50"
                        Command="{Binding SaveConCommand}"
                        Style="{StaticResource ButtonSuccess}">
                        保存
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </hc:DialogContainer>
</Page>